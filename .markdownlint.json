{
  "default": true,
  "line-length": false,
  "no-trailing-punctuation": false,
  "heading-style": {
    "style": "atx"
  },
  "first-line-heading": {
    "level": 1
  },
  "ordered-list-marker-value": "one",
  "unordered-list-marker-style": {
    "style": "-"
  },
  "list-indent": {
    "indent": 2
  },
  "no-multiple-blanks": true,
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "fenced-code-language": {
    "require": true
  },
  "links": {
    "require-leading-slash": true,
    "style": "relative",
    "allowed-pattern": "^/[A-Z0-9_/]+\\.MD$"
  },
  "file-name": {
    "case": "uppercase",
    "extension": ".MD",
    "allowed-pattern": "^[A-Z0-9_/]+\\.MD$"
  },
  "spaces-around-headers": {
    "consistent": true
  },
  "blanks-around-headings": {
    "consistent": true
  },
  "blanks-around-lists": true,
  "blanks-around-fences": true,
  "no-inline-html": true,
  "no-hard-tabs": true,
  "no-space-in-code": true,
  "no-empty-links": true,
  "maximum-line-length": {
    "line_length": 80,
    "code_blocks": false,
    "tables": false
  },
  "no-consecutive-blank-lines": true
}
